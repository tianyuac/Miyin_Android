<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical" >

    <include layout="@layout/head_training" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="200.0dip"
            android:layout_height="match_parent"
            android:background="@color/bg_grey_n_2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvscoreboard1"
                style="@style/item_selector"
                android:text="@string/scoreboard1" />

            <TextView
                android:id="@+id/tvscoreboard2"
                style="@style/item_selector"
                android:text="@string/scoreboard2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10.0dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_color_grey"
                android:orientation="horizontal"
                android:padding="10.0dip" >

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="名次"
                    android:textColor="@color/white"
                    android:textSize="18.0dip" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="团队名称"
                    android:textColor="@color/white"
                    android:textSize="18.0dip" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="积分"
                    android:textColor="@color/white"
                    android:textSize="18.0dip" />
            </LinearLayout>

            <View 
                android:layout_width="match_parent"
                android:layout_height="10.0dip"/>
            
            <start.widget.xlistview.XListView
                android:id="@+id/xlv_listview_1"
                style="@style/listview3"/>

            <start.widget.xlistview.XListView
                android:id="@+id/xlv_listview_2"
                style="@style/listview3"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>