<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical"
    android:padding="20.0dip" >

    <RelativeLayout
        android:id="@+id/frame_learn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_word"
                    android:layout_width="250.0dip"
                    android:layout_height="250.0dip"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/default_words" />

                <View
                    android:layout_width="40.0dip"
                    android:layout_height="1.0dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40.0dip"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/txt_englishName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/black"
                                    android:textSize="20.0dip"
                                    android:textStyle="bold" />

                                <ImageButton
                                    android:id="@+id/btn_player_words"
                                    android:layout_width="80.0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10.0dip"
                                    android:contentDescription="@string/empty"
                                    android:background="@null"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:onClick="onClick"
                                    android:padding="10.0dip"
                                    android:src="@drawable/ic_player2" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="10.0dip" />

                            <TextView
                                android:id="@+id/txt_phoneticSymbols"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20.0dip"
                                android:textColor="@color/black"
                                android:textSize="16.0dip" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" >

                            <ImageButton
                                android:id="@+id/btn_player"
                                android:layout_width="80.0dip"
                                android:layout_height="wrap_content"
                                android:background="@drawable/selector_button_color_grey"
                                android:contentDescription="@string/empty"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:padding="10.0dip"
                                android:src="@drawable/ic_player" />

                            <TextView
                                android:id="@+id/txt_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="35.0dip"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="30.0dip"
                            android:layout_height="30.0dip"
                            android:layout_margin="5.0dip"
                            android:background="@drawable/bg_circle"
                            android:gravity="center"
                            android:text="@string/china"
                            android:textColor="@color/white"
                            android:textSize="16.0dip" />

                        <TextView
                            android:id="@+id/txt_chineseSignificance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16.0dip" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="30.0dip"
                            android:layout_height="30.0dip"
                            android:layout_margin="5.0dip"
                            android:background="@drawable/bg_circle"
                            android:gravity="center"
                            android:text="@string/cases"
                            android:textColor="@color/white"
                            android:textSize="16.0dip" />

                        <TextView
                            android:id="@+id/txt_exampleEnglish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16.0dip" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10.0dip" />

                    <TextView
                        android:id="@+id/txt_exampleChinese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40.0dip"
                        android:textColor="@color/black"
                        android:textSize="16.0dip" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10.0dip" />

                    <ImageView
                        android:id="@+id/iv_memory_method"
                        android:layout_width="250.0dip"
                        android:layout_height="50.0dip"
                        android:contentDescription="@string/empty" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10.0dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:background="@drawable/bg_circle"
                android:padding="5.0dip"
                android:text="@string/kuxuememorymethod"
                android:textColor="@color/white"
                android:textSize="16.0dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10.0dip" />

            <TextView
                android:id="@+id/txt_memoryMethodA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:textColor="@color/black"
                android:textSize="16.0dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10.0dip" />

            <TextView
                android:id="@+id/txt_memoryMethodB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:textColor="@color/black"
                android:textSize="16.0dip" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_addtonewword"
                    style="@style/button_style_rectangle"
                    android:layout_width="150.0dip"
                    android:layout_height="50.0dip"
                    android:background="@drawable/selector_button_color_red"
                    android:text="@string/addtonewword"
                    android:textSize="20.0dip" />

                <Button
                    android:id="@+id/btn_deletetonewword"
                    style="@style/button_style_rectangle"
                    android:layout_width="150.0dip"
                    android:layout_height="50.0dip"
                    android:background="@drawable/selector_button_color_grey"
                    android:text="@string/deletetonewword"
                    android:textSize="20.0dip" />

                <ImageButton
                    android:id="@+id/btn_previous"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/selector_button_color_grey"
                    android:contentDescription="@string/empty"
                    android:onClick="onClick"
                    android:padding="10.0dip"
                    android:src="@drawable/ic_arrow_left"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/btn_next"
                    android:layout_width="150.0dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/selector_button_color_red"
                    android:contentDescription="@string/empty"
                    android:onClick="onClick"
                    android:padding="10.0dip"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/frame_done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="@string/empty"
                android:src="@drawable/logo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="恭喜你学习完"
                        android:textColor="@color/black"
                        android:textSize="35.0dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_learn_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#e82626"
                        android:textSize="35.0dip"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个单词，"
                        android:textColor="@color/black"
                        android:textSize="35.0dip"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="要不要测试下成果？"
                    android:textColor="@color/black"
                    android:textSize="35.0dip"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/immediatetest"
                    style="@style/button_style_rectangle"
                    android:background="@drawable/selector_button_color_red"
                    android:text="@string/immediatetest" />

                <Button
                    android:id="@+id/waitagain"
                    style="@style/button_style_rectangle"
                    android:background="@drawable/selector_button_color_grey"
                    android:text="@string/waitagain" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>