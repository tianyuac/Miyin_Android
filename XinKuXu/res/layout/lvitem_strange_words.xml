<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_strange_words"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="45.0dip"
        android:layout_weight="5"
        android:background="#f0f0f0"
        android:orientation="horizontal"
        android:padding="10.0dip" >
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20.0dip"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="20.0dip"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20.0dip"
            android:textColor="#666666"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="45.0dip"
        android:layout_weight="3"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btnReview"
            style="@style/button_style_rectangle_1"
            android:background="@drawable/selector_button_color_red_noshape"
            android:text="@string/mygoreview" />
        <Button
            android:id="@+id/btnTest"
            style="@style/button_style_rectangle_1"
            android:background="@drawable/selector_button_color_blue_noshape"
            android:text="@string/mygotest" /> 
    </LinearLayout>

</LinearLayout>