<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:padding="20.0dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
				android:id="@+id/iv_word"
                android:layout_width="250.0dip"
                android:layout_height="250.0dip"
                android:contentDescription="@string/empty"
                android:src="@drawable/default_words"/>

            <View
                android:layout_width="40.0dip"
                android:layout_height="1.0dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40.0dip"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_englishName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="20.0dip"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10.0dip" />

                        <TextView
                            android:id="@+id/txt_phoneticSymbols"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20.0dip"
                            android:textColor="@color/black"
                            android:textSize="16.0dip" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_player"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5.0dip"
                        android:background="@drawable/selector_button_1"
                        android:onClick="onClick"
                        android:padding="10.0dip"
                        android:text="播放"
                        android:textColor="@color/selector_button_textcolor_1"
                        android:textSize="16.0dip" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10.0dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_margin="5.0dip"
                        android:background="@drawable/bg_circle"
                        android:gravity="center"
                        android:text="@string/china"
                        android:textColor="@color/white"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/txt_chineseSignificance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16.0dip" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10.0dip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_margin="5.0dip"
                        android:background="@drawable/bg_circle"
                        android:gravity="center"
                        android:text="@string/cases"
                        android:textColor="@color/white"
                        android:textSize="16.0dip" />

                    <TextView
                        android:id="@+id/txt_exampleEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16.0dip" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10.0dip" />

                <TextView
                    android:id="@+id/txt_exampleChinese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40.0dip"
                    android:textColor="@color/black"
                    android:textSize="16.0dip" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10.0dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/bg_circle"
            android:padding="5.0dip"
            android:text="@string/kuxuememorymethod"
            android:textColor="@color/white"
            android:textSize="16.0dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10.0dip" />

        <TextView
            android:id="@+id/txt_memoryMethodA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:textColor="@color/black"
            android:textSize="16.0dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10.0dip" />

        <TextView
            android:id="@+id/txt_memoryMethodB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:textColor="@color/black"
            android:textSize="16.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/selector_button_1"
            android:onClick="onClick"
            android:padding="10.0dip"
            android:text="上一个"
            android:textColor="@color/selector_button_textcolor_1"
            android:textSize="16.0dip"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@drawable/selector_button_2"
            android:onClick="onClick"
            android:padding="10.0dip"
            android:text="下一个"
            android:textColor="@color/selector_button_textcolor_2"
            android:textSize="16.0dip" />
    </LinearLayout>

</RelativeLayout>