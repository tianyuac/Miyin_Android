<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bm_bg_member" >

        <TextView
            android:id="@+id/head_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10.0dip"
        	android:drawableLeft="@drawable/ic_arrow_left"
        	android:drawablePadding="5.0dip"
            android:clickable="true"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="16.0dip"
            android:text="@string/back" />
        
        <TextView
            android:id="@+id/txt_account_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="50.0dip"
            android:clickable="true"
            android:drawableTop="@drawable/ic_login_account"
            android:onClick="onClick"
            android:text="@string/gotologin"
            android:textColor="@color/white"
            android:textSize="16.0dip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtSigin"
        style="@style/member_function_button1"
        android:drawableLeft="@drawable/ic_sigin"
        android:text="@string/signin" />

    <View style="@style/line" />

    <TextView
        android:id="@+id/txtCollect"
        style="@style/member_function_button1"
        android:drawableLeft="@drawable/ic_collect"
        android:drawableRight="@drawable/ic_arrow_right"
        android:text="@string/collect" />

    <View style="@style/line" />

    <TextView
        android:id="@+id/txtFollow"
        style="@style/member_function_button1"
        android:drawableLeft="@drawable/ic_follow"
        android:drawableRight="@drawable/ic_arrow_right"
        android:text="@string/follow" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20.0dip" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:orientation="horizontal">
	        <TextView
		        android:id="@+id/txtOffLine"
		        style="@style/member_function_button2"
		        android:drawableTop="@drawable/ic_offline"
		        android:text="@string/offline" />
	        <TextView
		        android:id="@+id/txtMode"
		        style="@style/member_function_button2"
		        android:drawableTop="@drawable/ic_mode"
		        android:text="@string/mode" />
	        <TextView
		        android:id="@+id/txtTextMode"
		        style="@style/member_function_button2"
		        android:drawableTop="@drawable/ic_textmode"
		        android:text="@string/textmode" />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:orientation="horizontal">
	        <TextView
		        android:id="@+id/txtSearch"
		        style="@style/member_function_button2"
		        android:drawableTop="@drawable/ic_search"
		        android:text="@string/search" />
	        <TextView
		        android:id="@+id/txtSetting"
		        style="@style/member_function_button2"
		        android:drawableTop="@drawable/ic_setting"
		        android:text="@string/setting" />
	        <View 
	            android:layout_width="0.0dip"
	            android:layout_height="1.0dip"
	            android:layout_weight="1"/>
	    </LinearLayout>
    </LinearLayout>
    
    
</LinearLayout>