<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_header_n" >

    <Button
        android:id="@+id/head_back"
        style="@style/main_head_button"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_button_header_sliding" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_toRightOf="@id/head_back">

        <Button
            android:id="@+id/head_1"
            style="@style/main_head_title_button"
            android:visibility="gone" />

        <Button
            android:id="@+id/head_2"
            style="@style/main_head_title_button"
            android:visibility="gone" />

        <Button
            android:id="@+id/head_3"
            style="@style/main_head_title_button"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/head_4"
            style="@style/main_head_title_button"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/head_search"
        style="@style/main_head_button"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_button_header_search"
        android:visibility="gone"/>

</RelativeLayout>